          <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
        </li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
  <% if user_signed_in? %>
    <li>
    <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>
    </li>
  <% else %>
    <li>
    <%= link_to('Login', new_user_session_path)  %>
    </li>
  <% end %>
</ul>