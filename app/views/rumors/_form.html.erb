<%= simple_form_for(@rumor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
  	<%= f.input :bubble_tokens, label: "Bubbles",
  															"data-pre" => @rumor.bubbles.map(&:attributes).to_json %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
