<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @bubble.name %>
</p>

<p>
  <b>Description:</b>
  <%= @bubble.description %>
</p>

<p>
  <b>Rumors:</b>
  <ol class="feed">
    <% @bubble.rumors.each do |rumor| %>
    	<li><%= link_to rumor.title, rumor %> | <%= rumor.content %></li>
    <% end %>
  </ol>
</p>

<p>
  <b>Tags:</b>
  <%= raw @bubble.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
</p>

<%= link_to 'Edit', edit_bubble_path(@bubble) %> |
<%= link_to 'Back', bubbles_path %> |
<%= link_to 'Destroy', @bubble, method: :delete, data: { confirm: 'Are you sure?' } %>
